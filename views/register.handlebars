<body>
  <h1 class="register-title">Welcome</h1>

  <form class="register" method="post" action="/users/register">
    
    
    <input type="text" class="register-input" placeholder="Username" name="username">
    <input type="password" class="register-input" placeholder="Password" name="password">
    <input type="hidden" class="register-input" placeholder="Password" name="invisible">
    <input type="submit" value="Create Account" class="register-button">
  </form>
</body>
